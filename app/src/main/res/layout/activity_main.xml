<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/inputAddres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inputAddresTxt"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70dp"
         />

    <EditText
        android:id="@+id/addresExample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/addresExampleTxt"
        android:inputType="textUri"
        app:layout_constraintTop_toBottomOf="@id/inputAddres"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/searchBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/searchBtn"
        app:layout_constraintTop_toBottomOf="@id/addresExample"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp" />

</androidx.constraintlayout.widget.ConstraintLayout>